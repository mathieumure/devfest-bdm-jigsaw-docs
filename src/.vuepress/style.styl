.theme-container {
  background: url('/devfest-nantes-jigsaw-docs/cover.jpg') fixed;
  background-color: black;
  background-position: 0px 50vh;
  min-height: 100vh;
}

.sidebar {
  background-color transparent;
  border-right: none;
}

.navbar {
  background-color black;
  .links {
    background transparent;
    .search-box {
      input {
        color: #2c3e50;
      }
      .suggestion {
        color: #2c3e50;
      }
    }
  }
}

h1 {
  font-family: 'Pathway Gothic One', sans-serif;
  color: #fbcf22de;
  text-transform: uppercase;
  font-size: 22px;
  font-weight: 600;
  letter-spacing: 6px;
}

strong, p code, li code {
  color: #fbcf22de !important;
}

blockquote {
  font-size: 1em;
}

.language-error code {
  color: #e2777a !important;
}